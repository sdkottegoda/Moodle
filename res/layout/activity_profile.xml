<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity" >

    <LinearLayout
        android:id="@+id/profile_hdr_menu_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar_shape"
        android:orientation="horizontal"
        android:weightSum="3" >
        
        <TextView
            android:id="@+id/profile_hdr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/profile_hdr"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:gravity="left"
		    android:textStyle="bold" />
        
    </LinearLayout>

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/profile_hdr_menu_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/profile" />
    
    <TextView 
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"
        android:layout_alignParentLeft="true"
        android:text="@string/profile_fullname"
        android:layout_marginLeft="10dp" />

    <TextView 
        android:id="@+id/icqTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTextView"
        android:layout_alignParentLeft="true"
        android:text="@string/profile_icq"
        android:layout_marginLeft="10dp" />
    
    
	<TextView 
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icqTextView"
        android:layout_alignParentLeft="true"
        android:text="@string/profile_phones"
        android:layout_marginLeft="10dp" />
	
	<TextView 
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneTextView"
        android:layout_alignParentLeft="true"
        android:text="@string/profile_email"
        android:layout_marginLeft="10dp" />
	
	<TextView 
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailTextView"
        android:layout_alignParentLeft="true"
        android:text="@string/profile_address"
        android:layout_marginLeft="10dp" />
	
	<TextView 
        android:id="@+id/cityCountryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressTextView"
        android:layout_alignParentLeft="true"
        android:text="@string/profile_city_country"
        android:layout_marginLeft="10dp" />
	
	<TextView 
        android:id="@+id/coursesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityCountryTextView"
        android:layout_alignParentLeft="true"
        android:text="@string/profile_courses"
        android:layout_marginLeft="10dp" />
    
	
</RelativeLayout>
